
{{#if showLabel}}
	<div class="label-container">
		<span class="label">{{labelString}}</span>
		<span class="hint">
			{{#if onClick}}
				<a class="blueHint" {{action 'hintAction'}}>{{hint}}</a>
			{{else}}
				{{hint}}
			{{/if}}
		</span>
	</div>
{{/if}}

{{#if disabled}}
	<div class="validate-container disabled">
		{{torpid-input placeholder=placeholder type=type value=value tabindex=tabindex disabled=true onBlur="blurAction" onSubmit="submitAction"}}
	</div>
{{else}}
	<div class="validate-container">
		{{torpid-input placeholder=placeholder type=type value=value tabindex=tabindex onBlur="blurAction" onSubmit="submitAction"}}
	</div>
{{/if}}

<div class="error-container">
	{{error}}
</div>
