
<a class="d-button grey" {{action "openMenu" bubbles=false}}>{{menuTitle}}</a>
<div class="dots" {{action "openMenu" bubbles=false}}>
	<span></span>
	<span></span>
	<span></span>
</div>
<div class="download" {{action "openMenu" bubbles=false}}>
	<span class="c-icon download-icon"></span>
</div>

<ul class="select-container" {{action "closeMenu" bubbles=false}}>
	{{#each model as |item|}}
		<li class="{{if item._selected 'selected'}}{{if item._unselectable ' unselectable'}}" {{action 'clickItemAction' item bubbles=false}}>
			{{get-value item itemLabel}}
		</li>
	{{/each}}
</ul>
