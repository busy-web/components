<div class="box">
  {{#if view.disabled}}
    <input type="{{view.type}}" id="{{view.name}}-{{view.value}}" name="{{view.name}}" value="{{view.value}}"  checked={{view.checked}} disabled>
  {{else}}
    <input type="{{view.type}}" id="{{view.name}}-{{view.value}}" name="{{view.name}}" value="{{view.value}}"  checked={{view.checked}} action 'sendChecked'>
  {{/if}}
  <label for="{{view.name}}-{{view.value}}">
  </label>
</div>
<span>
  {{#if view.title}}
    {{view.title}}
  {{else}}
    {{view.value}}
  {{/if}}
</span>
