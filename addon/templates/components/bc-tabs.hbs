
<div class="--bc-tabs-header">
	{{#if model}}
		{{#each model as |tab|}}
			{{#if tab.isViewable}}
				<span class="--bc-tabs-name{{if tab.active ' active'}}" {{action 'changeTab' tab bubbles=false}}>
					{{tab.tabName}}

					{{#if tab.showBadge}}
						<span class="--bc-tabs-badge badge-{{if tab.badgeColor tab.badgeColor 'default'}}">{{tab.badgeContent}}</span>
					{{/if}}
				</span>
			{{/if}}
		{{/each}}
	{{/if}}
</div>

<div class="--bc-tabs-content">
	{{yield}}
</div>
